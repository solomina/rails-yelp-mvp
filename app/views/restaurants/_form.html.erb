<div class="wrapper">

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


</div>
